<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="css/bootstrap.css" />
		<link rel="stylesheet" href="css/styles.css" />
		<title>Debug</title>
	</head>

	<body>
		<%-include('navbar.ejs', {page:page})%>
		<div
			class="justify-content-center text-center"
			style="width: 75%; margin-left: 12.5%; margin-bottom: 0px"
		>
			<p class="fs-3 fw-bold">Debug Menu</p>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Username</th>
						<th scope="col">Password</th>
						<th scope="col">Balance</th>
						<th scope="col">Permission level</th>
						<th>Dark Mode</th>
					</tr>
				</thead>
				<tbody>
					<%for (user in users) {%>
					<tr>
						<td><%=users[user].id%></td>
						<td><%=users[user].username%></td>
						<td><%=users[user].password%></td>
						<td>$<%=users[user].balance%></td>
						<td>
							<%if (users[user].permissions == 0) {%>Teacher<%} else
							if(users[user].permissions == 2) {%>Student<%}%>
						</td>

						<td>
							<%if (users[user].darkMode == 1) {%>True<%} else
							if(users[user].darkMode == 0) {%>False<%}%>
						</td>
					</tr>

					<tr>
						<%}%>
					</tr>
				</tbody>
			</table>
			<br />
			<br />
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Sender ID</th>
						<th scope="col">Receiver ID</th>
						<th scope="col">Amount</th>
					</tr>
				</thead>
				<tbody>
					<%for (transaction in transactions) {%>
					<tr>
						<td><%=transactions[transaction].senderId%></td>
						<td><%=transactions[transaction].receiverId%></td>
						<td><%=transactions[transaction].amount%></td>
					</tr>
					<%}%>
				</tbody>
			</table>
		</div>
	</body>
</html>
